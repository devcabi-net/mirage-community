# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://themirage.xxx

# Database
DATABASE_URL=postgresql://mirage_user:your_password@localhost:5432/mirage_community

# NextAuth.js
NEXTAUTH_URL=https://themirage.xxx
NEXTAUTH_SECRET=generate-a-secure-random-string-here

# Discord OAuth
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=https://themirage.xxx/api/auth/callback/discord

# Discord Bot
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_GUILD_ID=your_discord_guild_id
DISCORD_BOT_CLIENT_ID=your_discord_bot_client_id

# OpenAI Moderation API
OPENAI_API_KEY=your_openai_api_key

# Google Perspective API (Alternative to OpenAI)
PERSPECTIVE_API_KEY=your_perspective_api_key

# AWS S3 (Optional for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=mirage-community-uploads

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=10485760 # 10MB in bytes
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# SFTP Configuration
SFTP_PORT=2222
SFTP_HOST_KEY_PATH=/etc/ssh/ssh_host_rsa_key
SFTP_BASE_PATH=/var/www/uploads

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@themirage.xxx

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Redis (Optional for session management)
REDIS_URL=redis://localhost:6379

# Security
CORS_ORIGIN=https://themirage.xxx
SESSION_SECRET=generate-another-secure-random-string
JWT_SECRET=generate-yet-another-secure-random-string

# Feature Flags
ENABLE_DISCORD_BOT=true
ENABLE_SFTP=true
ENABLE_MODERATION_API=true
ENABLE_S3_UPLOADS=false

# Development
NEXT_TELEMETRY_DISABLED=1 